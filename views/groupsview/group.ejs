   <% if (unique_code && unique_link) { %>
<script>
document.addEventListener("DOMContentLoaded", () => {
    Swal.fire({
        title: 'Compartir grupo',
        html: `
            <div style="text-align:left">
                <p><strong>Mediante c칩digo de invitaci칩n:</strong></p>
                <span style="font-size:small">Los que reciban este c칩digo deberan insertarlo desde nuestra p치gina web<span>
                <div style="display:flex;align-items:center;gap:5px">
                    <input id="swal-code" value="<%= unique_code %>" readonly style="flex:1;padding:4px;border:1px solid #ccc;border-radius:4px"/>
                    <button onclick="copyToClipboard('swal-code')">游늶</button>
                </div>
                <br>
                <p><strong>O mediante enlace:</strong></p>
                <div style="display:flex;align-items:center;gap:5px">
                    <input id="swal-link" value="<%= unique_link %>" readonly style="flex:1;padding:4px;border:1px solid #ccc;border-radius:4px"/>
                    <button onclick="copyToClipboard('swal-link')">游늶</button>
                </div>
            </div>
        `,
        showConfirmButton: false,
        showCloseButton: true
    });
});

function copyToClipboard(id) {
    let input = document.getElementById(id);
    input.select();
    input.setSelectionRange(0, 99999); // Para m칩viles
    document.execCommand("copy");

    Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'success',
        title: 'Copiado al portapapeles',
        showConfirmButton: false,
        timer: 2000
    });
}
</script>
<% } %>

